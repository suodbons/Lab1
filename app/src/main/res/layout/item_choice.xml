<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemChoiceTxtDate"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemChoiceTxtFont"
        android:layout_width="136dp"
        android:layout_height="23dp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/itemChoiceTxtDate"
        app:layout_constraintTop_toBottomOf="@+id/itemChoiceTxtDate" />

    <TextView
        android:id="@+id/itemChoiceTxtText"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/itemChoiceTxtFont"
        app:layout_constraintTop_toBottomOf="@+id/itemChoiceTxtFont" />

    <ImageView
        android:id="@+id/itemChoiceImgDelete"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:contentDescription="@string/delete"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toTopOf="@+id/itemChoiceTxtText"
        app:layout_constraintEnd_toEndOf="@+id/itemChoiceTxtText"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/itemChoiceTxtDate"
        app:layout_constraintTop_toTopOf="@+id/itemChoiceTxtDate"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
